<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado focado -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Cor de fundo branca -->
            <stroke android:width="2dp" android:color="#0000FF" /> <!-- Borda azul -->
            <corners android:radius="4dp" />
        </shape>
    </item>

    <!-- Estado padrão (não focado) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Cor de fundo branca -->
            <stroke android:width="2dp" android:color="#CCCCCC" /> <!-- Borda cinza -->
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>